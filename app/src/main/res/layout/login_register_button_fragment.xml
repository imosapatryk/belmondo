<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_register_button_fragment_view"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/login_register_height">

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/registration_button_height"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/login_title"
        android:textSize="@dimen/registration_button_textsize_sp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/register_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/registration_button_height"
        android:gravity="center"
        android:text="@string/register_title"
        android:textSize="@dimen/registration_button_textsize_sp"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>