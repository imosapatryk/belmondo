<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/discipline_row_height">
    <ImageView
        android:id="@+id/discipline_row_imageview"
        android:layout_width="@dimen/discipline_row_image_width"
        android:layout_height="@dimen/discipline_row_image_height"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/discipline_row_textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        />
</LinearLayout>